<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Proveedores</title>
</head>
<body class="bg-white text-black">
    <h1 class="text-3xl font-bold mb-4 text-center">Lista de Proveedores</h1>
    <div class="flex justify-center">
        <table class="table-auto">

        <thead>
            <tr>
                <th class="px-4 py-2">#</th>
                <th class="px-4 py-2">Nombre</th>
                <th class="px-4 py-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% proveedores.forEach(function(proveedor) { %>
                <tr>
                    <td class="border px-4 py-2"><%= proveedor._id %></td>
                    <td class="border px-4 py-2"><%= proveedor.nombrecia %></td>
                    <td class="border px-4 py-2">
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Editar
                        </button>
                        <form action="/proveedor/delete/<%= proveedor._id %>" method="get" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este proveedor?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
    <h2 class="text-2xl font-bold mt-8 mb-2">Agregar Proveedor</h2>
    <form action="/proveedor/add" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="nombre">
                Nombre
            </label>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="nombre" type="text" name="nombre" required>
        </div>
        <div class="flex items-center justify-between">
            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Crear Proveedor
            </button>
        </div>
    </form>
</body>
</html>